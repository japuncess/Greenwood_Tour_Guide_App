<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".BetweenLocationActivity">

    <RelativeLayout
        android:layout_width="1480dp"
        android:layout_height="1200dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ImageViewBetween"
            android:src="@drawable/screen1"
            />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="1280dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_marginTop="650dp"
            android:background="@color/colorGreen2"
        >

        <Button
                android:id="@+id/btnGoTo"
                android:layout_width="345dp"
                android:layout_height="120dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:onClick="continueTour"
                android:background="@drawable/btn_round"
                android:text="@string/continue_tour"
                android:textColor="@color/colorWhite"
                android:textSize="28sp"
                android:textStyle="bold"
            />

        <Button
                android:id="@+id/btnEndTourBetween"
                android:layout_width="345dp"
                android:layout_height="120dp"
                android:layout_marginLeft="890dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:onClick="endTour"
                android:background="@drawable/btn_round"
                android:text="@string/end_tour"
                android:textColor="@color/colorWhite"
                android:textSize="28sp"
                android:textStyle="bold"
            />


    </RelativeLayout>

</RelativeLayout>
